{
  "manifest_version": 3,
  "name": "CalHacks AdFocus Reader",
  "version": "0.1.0",
  "description": "Turns any article into a narrated gameplay video with subtitles (Entire Reading mode).",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://api.openai.com/*",
    "https://api.elevenlabs.io/*"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "src/reader.html",
        "src/styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}